<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="classpath:properties/bean-property.properties" />
    </bean>

    <bean id="appConfig" class="spring.beanfactorypostprocessor.AppConfig" >
        <property name="url" value="${url}" />
        <property name="port" value="${port}" />
        <property name="appurl" value="${appurl}" />
        <property name="username" value="${user}" />
        <property name="password" value="${password}" />
        <property name="osName" value="${os.name}" />
    </bean>

</beans>