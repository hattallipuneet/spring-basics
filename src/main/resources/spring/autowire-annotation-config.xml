<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean class="spring.autowire.MovieCatalog" primary="true">
        <constructor-arg name="movies">
            <list>
                <value>Avengers: End Game</value>
            </list>
        </constructor-arg>
    </bean>

    <bean class="spring.autowire.MovieCatalog">
        <constructor-arg name="movies">
            <list>
                <value>Avengers: Infinity War</value>
            </list>
        </constructor-arg>
    </bean>

    <bean id="movieRecommender" class="spring.autowire.MovieRecommender" />


    <bean id="netflixCatalog" class="spring.autowire.TvSeriesCatalog">
        <qualifier value="netflix" />
        <property name="ottProvider" value="netflix" />
    </bean>

    <bean id="hotstarCatalog" class="spring.autowire.TvSeriesCatalog">
        <qualifier value="hotstar" />
        <property name="ottProvider" value="hotstar" />
    </bean>

    <bean id="tvSeriesRecommender" class="spring.autowire.TvSeriesRecommender" />

</beans>